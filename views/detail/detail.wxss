@import "/components/style/stars.wxss";
.videoc{
  width:100%;
  height:860rpx;
  position: relative;
}
.video-bg{
  width:100%;
  height:860rpx;
  background-image: url("https://img3.doubanio.com/view/photo/s_ratio_poster/public/p2514119443.jpg");
  background-position: center 20%;
  background-repeat: no-repeat;
  background-size: 200% 200%;
  filter: blur(7rpx);
}
.video{
  width:100%;
  height:310px;
  position: absolute;
  top:0;
}
.bgsjx{
  border-bottom: 180rpx solid #fff;
  border-right:180rpx solid #fff;
  border-left:760rpx solid transparent;
  border-top: 180rpx solid transparent;
  position: absolute;
  left:-10rpx;
  bottom: -10rpx;
}

.detail{
  width:100%;
  height:100%;
  position:relative;
}
.detail-content{
  width:92%;
  margin-left:4%;
  position: absolute;
  top:370rpx;
  border: 1px solid red;
  background-color: #fff;
  border-radius: 10rpx;
}
.detail-detail{
  width: 380rpx;
  position: absolute;
  right:0;
  top:0;
}
.img{
  width:260rpx;
  height:370rpx;
  border-radius: 10rpx;
  position: relative;
  top:-68rpx;
  margin:0 20rpx;
}
.year{
  width: 315rpx;
  height:105rpx;
  text-align: center;
  line-height: 105rpx;
  border-radius: 10rpx;
  background-color: #fff;
  display: block;
  position: relative;
  top:-68rpx;
  right:-40rpx;
  box-shadow: 2px 5px 5px #999;
  font-weight: bold;
}
.title{
  display: block;
  font-size: 40rpx;
  font-weight: bold;
}
.futitle{
  display: block;
  font-size:28rpx;
  padding:20rpx 0;
  color: #666;
}

.detail-instr{
  width:100%;
}


