@import "/components/style/stars.wxss";
page{
  background-color: #f3f3f9;
  height:100%;
}
.home{
  width:100%;
  height:100%;
  position: relative;
}
/*背景*/
.homebg01{
  width:100%;
  height:340rpx;
  position: absolute;
  top:0;
  background: linear-gradient(to bottom right, #4182ff, #7722ff)
}
.homebg02{
  border: 150rpx solid #f3f3f9;
  border-left: 750rpx solid transparent;
  border-top: none;
  position: absolute;
  top:190rpx;
}
/**内容**/
.home-content{
  width:100%;
  height:100%;
}
.nav{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  white-space: nowrap;
  position: fixed;
  top: 0; 
  left: 0; 
  z-index: 99;
  background: linear-gradient(to right, #4280ff, #5c51ff)
}
.nav-item{
  padding:0 25rpx;
  float: left;
  color: #fff;
  font-size:35rpx;
}
.nav-item.active{
  font-size: 50rpx;
  padding:0 60rpx;
  font-weight: bold;
}
/*.nav-item:first-child{
  font-size: 50rpx;
  padding:0 60rpx;
  font-weight: bold;
 } */
.tab-content{
  margin-top:80rpx;
}
.movie-list{
  width:700rpx;
  height:250rpx;
  margin-left:35rpx;
  margin-top:50rpx;
  background: linear-gradient(to left, white, #f3f3f9);
  box-shadow: 1px 1px 3px #ece7f2;
  position: relative;
}
.movie-list-img{
  width:210rpx;
  height:210rpx;
  border-radius: 10rpx;
  position: relative;
  top: -15rpx;
}
.move-time{
  position: absolute;
  left:20rpx;
  bottom: 15rpx;
  font-size:24rpx;
  color: #999;
}
.movie-content{
  width:400rpx;
  float: right;
  padding:30rpx 0;
}
.title{
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.futitle{
  display: block;
  font-size:25rpx;
  color: #999;
  padding:15rpx 0;
}
.yy{
  font-size:25rpx;
}
.loading {
  text-align: center;
  height:80rpx;
  padding:20rpx;
}
.loading image{
  height:100%;
}