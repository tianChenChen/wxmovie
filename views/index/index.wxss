@import "/components/style/stars.wxss";
page{
  background-color: #f3f3f9;
  height:100%;
}
.nav{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  overflow-y: hidden;
  background-color: #594ffa;
}
.nav-item{
  padding:0 25rpx;
  float: left;
  color: #fff;
  font-size:35rpx;
}
.nav-item:first-child{
  font-size: 50rpx;
  padding:0 60rpx;
  font-weight: bold;
}

.movie-list{
  width:650rpx;
  height:250rpx;
  margin-left:25rpx;
  margin-top:50rpx;
  background: linear-gradient(to left, white, transparent);
  box-shadow: 1px 1px 3px #ece7f2;
}
.movie-list-img{
  width:210rpx;
  height:210rpx;
  border-radius: 10rpx;
  position: relative;
  top: -15rpx;
}
.movie-content{
  width:400rpx;
  float: right;
  padding:30rpx 0;
}
.title{
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.futitle{
  display: block;
  font-size:25rpx;
  color: #999;
  padding:10rpx 0;
}